@using PustokProject.ViewModels.Tags;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model VM_TagsIndex;

<div class="container-fluid">
    <a asp-action="CreateTag" class="btn btn-success">Create</a>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model.Tags)
                    {
                        <tr style="color:@(tag.IsDeleted ? "white" : "black"); background-color:@(tag.IsDeleted ? "red" : string.Empty)" colspan="2">
                            <td>@tag.Id</td>
                            <td>@tag.Title</td>
                            <td><a style="display:@(tag.IsDeleted ? "none" : string.Empty);)" asp-area="Admin" asp-controller="Tags" asp-action="UpdateTag" asp-route-id="@tag.Id" class="btn btn-warning">Edit</a></td>
                            <td><a style="display:@(tag.IsDeleted ? "none" : string.Empty);)" asp-area="Admin" asp-controller="Tags" asp-action="DeleteTag" asp-route-id="@tag.Id" class="btn btn-danger">Delete</a></td>
                            <td><a style="display:@(tag.IsDeleted ? string.Empty : "none" );)" asp-area="Admin" asp-action="RevokeDelete" asp-route-id="@tag.Id" class="btn btn-primary">Revoke</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>